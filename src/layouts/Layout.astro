---
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/public/Iconos/shawarma_logo.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- The Brother Hoops Font Family -->
		<link
			href="https://fonts.cdnfonts.com/css/the-brother-hoops"
			rel="stylesheet"
		/>
		<!-- font-family: 'The Brother Hoops', sans-serif; -->

		<!-- Bebas Neue Font Family -->
		<link
			href="https://fonts.cdnfonts.com/css/bebas-neue"
			rel="stylesheet"
		/>

		<!-- Animate.css -->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
		/>
		<!-- font-family: 'Bebas Neue', sans-serif; -->
	</head>

	<body>
		<main>
			<Header />
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--orangeBurnt: #d35013;
		--DarkEarth: #662d02;
		--gris-descripcion: #a0a0a0;
		--negro-suave: #1a1a1a;

		--animate-delay: .15s;
	}

	* {
		font-size: 62.5%;
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	html {
		color-scheme: light dark;
		/* background-color: #f8f8f8; */
		background-image: url("presentacionBG.webp");
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;

		scroll-behavior: smooth;
		color: rgb(256, 256, 256, 0.9);
	}

	.section-main {
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 100px 0;
	}
</style>
