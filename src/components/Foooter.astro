---
import SectionContainer from "./SectionContainer.astro";
---

<footer class="section-main">
    <SectionContainer classProp="flex justify-center items-center flex-col">
        <figure class="w-[190px] md:w-[240px] rounded-full justi overflow-hidden">
            <img
                src="../../public/Mas_ilustraciones/arabe.png"
                alt="imagen de un arabe"
                class="arabe-image w-full drop-shadow-2xl"
            />
        </figure>

        <h2 class="footer-titulo">ESTACIÓN SHAWARMA ROLLS</h2>

        <div class="redes-container">
            <a href="https://www.facebook.com/ShawarmaRolls" target="_blank"
                ><i
                    class="fa-brands fa-facebook"
                    aria-label="boton para ir al facebook de shawarma"></i><span
                    class="sr-only">Facebook de shawarma</span
                ></a
            >
            <a
                href="https://www.instagram.com/shawarmarolls/?hl=es-la"
                target="_blank"
                ><i
                    class="fa-brands fa-instagram"
                    aria-label="boton para ir al instagram de shawarma"
                ></i><span class="sr-only">Instagram de shawarma</span></a
            >
        </div>

        <p class="copyright">
            Corrientes, 3400, Argentina · Copyright © 2024 Estación Shawarma
            Rolls. Todos los derechos reservados.
        </p>
        <p class="company-software">
            Desarrollado por <span class="company">@JRS Software</span>
        </p>
    </SectionContainer>
</footer>

<style>
    footer {
        background-color: var(--negro-suave);
    }

    .arabe-image {
        mask-image: linear-gradient(#1a1a1a 80%, transparent);
    }

    .footer-titulo {
        font-size: 4.2rem;
        font-weight: bold;
        color: var(--orangeBurnt);
        font-family: "The Brother Hoops", sans-serif;
        letter-spacing: 6px;
    }

    .redes-container {
        display: flex;
        justify-content: center;
        gap: 20px;

        & a {
            margin-top: 5px;
            color: var(--orangeBurnt);
            transition: all 0.2s;

            & i {
                font-size: 5rem;
            }
        }

        & a:hover {
            transform: scale(1.08);
            filter: brightness(1.3);
        }
    }

    .copyright,
    .company-software {
        font-size: 1.6rem;
        margin-top: 20px;
        color: var(--gris-descripcion);
    }

    .company {
        color: var(--orangeBurnt);
        font-size: inherit;
        font-weight: bold;
    }

    /* ---------------- Mobile ----------------*/

    @media (width < 768px) {

        .footer-titulo {
            font-size: 22px;
            letter-spacing: 3px;
            margin-top: 10px;
        }

        .redes-container {
            & a {
                margin-top: 10px;

                & i {
                    font-size: 3.5rem;
                }
            }
        }

        .copyright,
        .company-software {
            text-align: center;
            font-size: 1.6rem;
            margin-top: 12px;
        }
    }
</style>

<script src="https://kit.fontawesome.com/68add04b88.js" crossorigin="anonymous"
></script>
